<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/chat_other_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp"
        android:background="@drawable/profile_radius"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_other_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font_roboto_regular"
        app:layout_constraintStart_toEndOf="@+id/chat_other_profile_iv"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/color_flow"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_other_profile_iv"
        app:layout_constraintTop_toBottomOf="@+id/chat_other_name_tv">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/font_roboto_bold"
            android:text="@string/chat_join_plan_title"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/join_plan_item_other_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/plan_image_radius"
            android:elevation="10dp" />

        <TextView
            android:id="@+id/join_plan_item_other_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/font_roboto_bold"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/join_plan_item_other_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/font_roboto_regular"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <Button
            android:id="@+id/join_plan_item_other_btn"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="77dp"
            android:layout_marginTop="75dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:fontFamily="@font/font_roboto_bold"
            android:gravity="center"
            android:text="@string/chat_join_plan_item_view"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/join_plan_item_other_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font_roboto_regular"
        android:textColor="@color/color_flow"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/join_plan_item_other_time_tv"
        app:layout_constraintStart_toEndOf="@+id/cardView2" />

    <TextView
        android:id="@+id/join_plan_item_other_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2" />

</androidx.constraintlayout.widget.ConstraintLayout>