<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/color_flow"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/chat_mine_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:maxLength="20"
            android:text="서버 나오기는 했는데 아직 오류 있어서 고치는 중"
            android:textColor="@color/white"
            android:fontFamily="@font/font_roboto_regular"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/chat_mine_cnt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="5"
        android:textSize="10sp"
        android:textColor="@color/color_flow"
        android:fontFamily="@font/font_roboto_regular"
        app:layout_constraintBottom_toTopOf="@+id/chat_mine_time_tv"
        app:layout_constraintEnd_toStartOf="@+id/cardView"/>

    <TextView
        android:id="@+id/chat_mine_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="5dp"
        android:text="오전 7:56"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/font_roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>