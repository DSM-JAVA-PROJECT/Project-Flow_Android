<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project_flow_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".di.ProjectFlowApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground2"
        android:roundIcon="@mipmap/ic_launcher_foreground2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.sign.LoginOauthActivity" />
        <activity android:name=".ui.flow.AddProjectActivity" />
        <activity android:name=".ui.sign.FinishSignActivity" />
        <activity android:name=".ui.sign.CertificationActivity" />
        <activity android:name=".ui.sign.EditPasswordActivity"/>
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.sign.DashBoardActivity"/>
        <activity android:name=".ui.chat.ChatActivity" />
        <activity android:name=".ui.sign.RegisterActivity" />
        <activity android:name=".ui.sign.LoginActivity" />
        <activity android:name=".ui.chat.ChatCreateActivity"/>
    </application>

</manifest>